<div class="margin">
	<h1 class="title-size">Books</h1>
<div class="index-table">
<table width="700px" height="10px">
		<tr>
			<th>title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
		<% @books.each do|book| %>
		<tbody>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td width="50px"><%= link_to "show", book_path(book.id) %></td>
				<td width="40px"><%= link_to "edit", edit_book_path(book.id) %></td>

				<td width="50px"><%= link_to "destory", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
		</tbody>
		<% end %>
	</thead>
</table>
</div>

<h2>New Book</h2>
<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<%= form_for(@book) do |f| %>
	<div>
		<h4>Title</h4>
	    <%= f.text_field :title %>
	</div>
 
    <div>
    	<h4>Body</h4>
    <%= f.text_area :body %>
    </div>

    <%= f.submit 'Create Book' %>


<% end %>
</div>